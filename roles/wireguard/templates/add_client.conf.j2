[Interface]
Address = {{ new_client_ip }}/32
DNS = 1.1.1.1
PrivateKey = {{ new_private_key_file.stdout }}

[Peer]
PublicKey = {{ server_public_key_file.stdout }}
AllowedIPs = 0.0.0.0/0, ::0/0
Endpoint = {{ hostvars[inventory_hostname].ansible_host | default(ansible_facts["default_ipv4"]["address"]) }}:{{ vpn_port }}
PersistentKeepalive = 21